{
  // Editor e fonte
  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,

  // Configurações do IntelliSense
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": "on"
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestionsDelay": 10,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.inlineSuggest.showToolbar": "always",

  // Configurações de linguagens
  "javascript.suggest.enabled": true,
  "typescript.suggest.enabled": true,
  "javascript.suggestionActions.enabled": true,
  "typescript.suggestionActions.enabled": true,
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Formatação por linguagem
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },

  // Performance
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/env/**": true,
    "**/venv/**": true
  },
  "editor.maxTokenizationLineLength": 20000,

  // Workspace e UI
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Andromeda Colorizer",
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 14,
  "workbench.panel.showLabels": false,
  "explorer.compactFolders": false,

  // Terminal
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.encoding": "utf8",
  "terminal.integrated.shellIntegration.enabled": false,

  // File nesting
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock"
  },

  // Outras configurações
  "files.autoSave": "afterDelay",
  "prettier.printWidth": 600,
  "gitlens.views.lineHistory.avatars": false,
  "biome.suggestInstallingGlobally": false
}
